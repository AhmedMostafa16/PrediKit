{
    "compilerOptions": {
        "noEmit": true,
        "noImplicitAny": true,
        "module": "es2020",
        "target": "es6",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}
